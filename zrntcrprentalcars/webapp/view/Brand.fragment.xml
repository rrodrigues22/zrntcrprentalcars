<c:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="openDialogBrand"
        title="{= ${brandModel>/Edit} ? ${i18n>editBrand} : ${i18n>registerBrand}}"
    >
        <beginButton>
            <Button
                text="{i18n>save}"
                type="Accept"
                press="handleSaveBtnPress"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                type="Reject"
                press="handleCancelBtnPress"
            />
        </endButton>
        <f:SimpleForm
            id="RegisterForm"
            editable="true"
        >
            <f:content>
                <Label
                    text="{/#ZRNTCRI_BRANDType/BrandName/@sap:label}"
                    required="true"
                />
                <Input
                    value="{brandModel>/BrandName}"
                    placeholder="{i18n>addBrand}"
                />
                <Label
                    text="{/#ZRNTCRI_BRANDType/CountryName/@sap:label}"
                    required="true"
                />
                <!-- <Input
                    value="{brandModel>/CountryName}"
                    placeholder="{i18n>addCountryName}"
                /> -->
                <Input
                    id="CountryInput"
                    textFormatMode="KeyValue"
                    placeholder="{i18n>addCountryName}"
                    showSuggestion="true"
                    showValueHelp="true"
                    valueHelpRequest=".onValueHelpCountry"
                    suggestionItems="{/ZRNTCRI_COUNTRY}"
                    suggestionItemSelected=".onSuggestionItemSelected"
                    value="{brandModel>/CountryName}"
                >
                    <suggestionItems>
                        <c:ListItem
                            key="{CountryId}"
                            text="{CountryName}"
                            additionalText="{CountryId}"
                        />
                    </suggestionItems>
                </Input>
                <Label
                    text="{/#ZRNTCRI_BRANDType/FoundationYear/@sap:label}"
                    required="true"
                />
                <Input
                    value="{brandModel>/FoundationYear}"
                    placeholder="{i18n>addFoundationYear}"
                    type="Number"
                />
                <Label
                    text="{/#ZRNTCRI_BRANDType/BrandText/@sap:label}"
                    required="true"
                />
                <TextArea
                    value="{brandModel>/BrandText}"
                    placeholder="{i18n>addBrandText}"
                    rows="4"
                    cols="50"
                />
            </f:content>
        </f:SimpleForm>
    </Dialog>
</c:FragmentDefinition>
