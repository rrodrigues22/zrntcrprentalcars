<mvc:View
    controllerName="zrntcrprentalcars.controller.Vehicles"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:semantic="sap.m.semantic"
    xmlns:c="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <f:DynamicPage
        id="dynamicPageId"
        preserveHeaderStateOnScroll="true"
        headerExpanded="{/headerExpanded}"
        class="sapUiNoContentPadding"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Veículos" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                id="DynamicPageId"
                pinnable="true"
            />
        </f:header>
        <f:content>
            <semantic:FullscreenPage
                id="semanticId"
                title=""
                showNavButton="false"
                navButtonPress="onNavButtonPress"
            >
                <semantic:addAction>
                    <semantic:AddAction
                        press="onPressAddVehicle"
                        tooltip="Adicionar Veículo"
                    />
                </semantic:addAction>
                <semantic:customFooterContent>
                    <Button
                        id="buttonEditBrand"
                        text="Editar"
                        tooltip="Editar Veículo"
                        press="onPressEditVehicle"
                    />
                </semantic:customFooterContent>
                <semantic:customFooterContent>
                    <Button
                        id="buttonDeleteBrand"
                        text="Deletar"
                        tooltip="Deletar Veículo"
                        press="showConfirmationPopup"
                    />
                </semantic:customFooterContent>
                <semantic:printAction>
                    <semantic:PrintAction
                        press="onPressPrintBrand"
                        tooltip="Imprimir Veículo"
                    />
                </semantic:printAction>
                <smartTable:SmartTable
                    id="StVehicles"
                    entitySet="ZRNTCRI_VEHICLE"
                    persistencyKey="SmartTableAnalytical_Explored"
                    class="sapUiResponsiveContentPadding"
                    enableAutoBinding="true"
                    app:useSmartToggle="true"
                    initiallyVisibleFields="PlateId,BrandId,BrandName,ModelName,ColorName,ModelYear,Km,Currency,DailyPrice,Availability"
                    tableBindingPath="to_Vehicles"
                >
                    <Table
                        id="VehicleId"
                        alternateRowColors="true"
                        showSeparators="None"
                        mode="SingleSelectMaster"
                        contextualWidth="auto"
                        includeItemInSelection="true"
                        autoPopinMode="true"
                        sticky="ColumnHeaders"
                        growing="true"
                        growingScrollToLoad="true"
                    />
                    <smartTable:customToolbar>
                        <OverflowToolbar
                            id="OverflowToolbarId"
                            design="Transparent"
                        />
                    </smartTable:customToolbar>
                </smartTable:SmartTable>
                <semantic:messagesIndicator>
                    <semantic:MessagesIndicator
                        id="MessageId"
                        press="onMessagesButtonPress"
                    />
                </semantic:messagesIndicator>
            </semantic:FullscreenPage>
        </f:content>
    </f:DynamicPage>
</mvc:View>
